@model GelisimTablosu.Models.Kategori
@{
    ViewData["Title"] = "Kategori Detay";
}
<h1>Kategori Detay</h1>
<div>
    <h4>@Model.Ad</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Açıklama</dt>
        <dd class = "col-sm-10">@Model.Ad</dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Sil</a>
</div>
