<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GelisimTablosu</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GelisimTablosu.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="no-print">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gelişim Tablosu Yapıcı</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="kategoriDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Kategoriler
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="kategoriDropdown">
                                <li><a class="dropdown-item" asp-controller="Kategori" asp-action="Index">Listele</a></li>
                                <li><a class="dropdown-item" asp-controller="Kategori" asp-action="Create">Ekle</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="konuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Konular
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="konuDropdown">
                                <li><a class="dropdown-item" asp-controller="Konu" asp-action="Index">Listele</a></li>
                                <li><a class="dropdown-item" asp-controller="Konu" asp-action="Create">Ekle</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="egitimYiliDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Eğitim Yılları
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="egitimYiliDropdown">
                                <li><a class="dropdown-item" asp-controller="EgitimYili" asp-action="Index">Listele</a></li>
                                <li><a class="dropdown-item" asp-controller="EgitimYili" asp-action="Create">Ekle</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted no-print">
        <div class="container">
            &copy; 2025 - GelisimTablosu - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
