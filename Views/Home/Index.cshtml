@model GelisimTablosu.Models.ViewModels.TableModel
@{
    ViewData["Title"] = "Gelişim Tablo Yapıcı 3000";
}


<h2>Tablo Oluştur</h2>
<div
    class="container"
>

<form asp-action="CreateTablo" method="post">
    <div class="form-group mb-3">
        <label asp-for="Dal" class="control-label"></label>
        <select asp-for="Dal" class="form-control" asp-items="Html.GetEnumSelectList<GelisimTablosu.Models.Dal>()"></select>
        <span asp-validation-for="Dal" class="text-danger"></span>
    </div>
    
     <div class="form-group mb-3">
        <label asp-for="KonuAdet" class="control-label"></label>
        <input asp-for="KonuAdet" class="form-control" value="1" />
        <span asp-validation-for="KonuAdet" class="text-danger"></span>
    </div>
     <div class="form-group mb-3">
        <label asp-for="EgitimYili" class="control-label"></label>
        <select asp-for="EgitimYili" class="form-control">
            <option value="">Seçiniz</option>
            @foreach (var egitimYili in ViewBag.EgitimYillari)
            {
                <option value="@egitimYili.Id">@egitimYili.Ad</option>
            }
        </select>
        <span asp-validation-for="EgitimYili" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Oluştur</button>
</form>
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
