@model IEnumerable<GelisimTablosu.Models.Student>
@{
    ViewData["Title"] = "Öğrenciler";
}
<h1>Öğrenciler</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Öğrenci Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Sınıf</th>
            <th>Dal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Ad</td>
        <td>@item.Sinif</td>
        <td>@item.Dal.ToString()</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Detay</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Sil</a> |
            <a asp-action="ViewTablo" asp-route-id="@item.Id">Tablo Gör</a>
        </td>
    </tr>
}
    </tbody>
</table>